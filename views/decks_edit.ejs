<%- include("partials/header") %>

<div class="container">
    <h2 class="form-header">Edit Deck</h2>
    <div class=" container formAddUpdate">
        <form action="/decks/<%= deck._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <label>Subject</label>
                <input type="text" class="form-control" id="inputSubject" name="deck[subject]" value="<%= deck.subject%>">
            </div>
            <div class="form-group">
                <label>Subtitle</label>
                <input type="text" class="form-control" id="inputSubtitle" name="deck[subtitle]" value="<%= deck.subtitle%>">
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea class="form-control" id="inputDescription" name="deck[description]"><%= deck.description%></textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Update</button>
            <a href="/decks" class="btn btn-secondary btn-block">Back</a>
        </form>
    </div>


</div>


<%- include("partials/footer") %>